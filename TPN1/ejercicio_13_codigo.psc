Algoritmo ejercicio_13_codigo
	// Ingresar tres valores ambientales de temperaturas y calcular e
	// informar la suma y el promedio de dichos valores.
	Escribir 'Ingresar la primer temperatura'
	Leer temp1
	Escribir 'Ingresar la segunda temperatura'
	Leer temp2
	Escribir 'Ingresar la tercera temperatura'
	Leer temp3
	suma <- temp1+temp2+temp3
	promedio <- suma/3
	Escribir 'La suma de temperaturas es: ', suma
	Escribir 'El promedio de temperaturas es: ', promedio
FinAlgoritmo
